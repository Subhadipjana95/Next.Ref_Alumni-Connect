			"name": "Resume Routes",
			"item": [
				{
					"name": "Upload Resume",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "resume",
									"type": "file",
									"src": [],
									"description": "Upload a PDF file of your resume"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/resume/upload",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"resume",
								"upload"
							]
						},
						"description": "Upload resume PDF for the first time."
					}
				},
				{
					"name": "Update Resume",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "resume",
									"type": "file",
									"src": [],
									"description": "Upload a new PDF file"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/resume/update",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"resume",
								"update"
							]
						},
						"description": "Replace existing resume."
					}
				},
				{
					"name": "Get Resume",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/resume",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"resume"
							]
						},
						"description": "Retrieve resume details."
					}
				},
				{
					"name": "Delete Resume",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/resume",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"resume"
							]
						},
						"description": "Delete resume."
					}
				}
			]
		},
