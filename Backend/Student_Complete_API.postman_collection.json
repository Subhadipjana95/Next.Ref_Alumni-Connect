{
	"info": {
		"_postman_id": "student-api-collection",
		"name": "Student Resume, LinkedIn & GitHub API",
		"description": "API endpoints for managing student resumes, LinkedIn profiles, and GitHub URLs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000/api/v1/student",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "YOUR_JWT_TOKEN_HERE",
			"type": "string"
		}
	],
